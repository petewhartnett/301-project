<div id="landing">
  <div id="welcome">
    <h1 class="landing-text">Bored App</h1>
    <p class="landing-text">Say goodbye to boredom forever! Type in your name and click the enter button</p>

    <section id="form">
      <form method="POST" action="/user-name">
        <label id="name">
          <input type="text" name="username" required minlength="3" placeholder="Your name">
        </label>
        <label id="btn">
          <input type="submit" value="Enter">
        </label>
      </form>
    </section>
  </div>


  <div id="video-container">
    <video autoplay muted loop id="background">
      <source src="assets/concert.mp4" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  </div>
</div>